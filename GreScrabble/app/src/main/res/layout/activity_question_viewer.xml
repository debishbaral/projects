<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_question_viewer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nf.co.mohatram.grescrabble.QuestionViewerActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/loading_view_ll"
        android:visibility="visible"
        android:gravity="center">
        <com.wang.avi.AVLoadingIndicatorView
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="144dp"
            android:layout_height="144dp"
            app:indicatorName="BallClipRotatePulseIndicator"
            app:indicatorColor="#000093"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please wait...."
            android:textSize="25dp"
            android:gravity="center"
            android:textColor="#000"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:orientation="vertical">
        <LinearLayout
            android:background="@drawable/bounding_time_"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">
            <TextView
                android:background="@drawable/timer_transition"
                android:id="@+id/tv_timer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=":30s"
                android:gravity="center"
                android:textSize="28dp"
                android:textColor="#000"
                android:shadowRadius="5"
                android:shadowColor="#000"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#000"/>
            <TextView
                android:id="@+id/tv_no_of_questions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9/30"
                android:textSize="28dp"
                android:gravity="center"
                android:textColor="#000"
                android:shadowRadius="5"
                android:shadowColor="#000"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/question_switcher_container"
            android:orientation="vertical"/>
    </LinearLayout>
</FrameLayout>
