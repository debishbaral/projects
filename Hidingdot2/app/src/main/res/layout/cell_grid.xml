<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/level_selector_dimension"
    android:layout_height="@dimen/level_selector_dimension"
    android:layout_margin="2dp"
    android:addStatesFromChildren="true"
    android:padding="2dp"

    app:cardBackgroundColor="@color/backgroundColor"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:addStatesFromChildren="true"
        android:background="@drawable/level_selector_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_level_no"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginBottom="0dp"
            android:gravity="center_horizontal|bottom"
            android:text="999"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_level_btns"
            android:textStyle="bold"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/iv_stars_count"
            android:layout_width="@dimen/level_selector_dimension"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/star0"
            android:layout_marginBottom="2dp"/>
    </LinearLayout>
    <!--<ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/shade"/>-->
    <ImageView
        android:id="@+id/iv_lock_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:padding="12dp"
        android:src="@android:drawable/ic_lock_idle_lock"
        />
</android.support.v7.widget.CardView>